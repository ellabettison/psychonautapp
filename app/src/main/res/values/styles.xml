<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:buttonStyle">@style/SubstanceButton</item>
        <item name="buttonStyle">@style/SubstanceButton</item>
        <item name="fontFamily">@fonts/Manjari-Bold</item>
        <item name="android:fontFamily">@fonts/Manjari-Bold</item>
    </style>

