<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".activities.HomeScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:background="#F3F3F3"
            android:gravity="top|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#00FFFFFF"
                android:backgroundTint="#00FFFFFF"
                android:paddingLeft="30dp"
                android:paddingTop="50dp"
                android:paddingRight="30dp"
                android:text="@string/cool_app_name_here"
                android:textAlignment="textStart"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="bottom|center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/depressants"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="false"
                    android:background="#00FFFFFF"
                    android:cropToPadding="false"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/depres" />

                <ImageButton
                    android:id="@+id/stimulants"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/stims2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/cannabinoids"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/canna" />

                <ImageButton
                    android:id="@+id/psychedelics"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/psyche" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/dissociatives"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/diss" />

                <ImageButton
                    android:id="@+id/entactogens"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/enac" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/deliriants"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/delir" />

                <ImageButton
                    android:id="@+id/entheogens"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/entheo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:gravity="center|top"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageButton
                    android:id="@+id/nootropics"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/noot" />

                <ImageButton
                    android:id="@+id/miscellaneous"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/misc" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>